{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "types",
        "typeRoots": ["node_modules/@types", "types"],
        "paths": {
            "@zkmpc/*": ["packages/*/src"]
        }
    }
}
